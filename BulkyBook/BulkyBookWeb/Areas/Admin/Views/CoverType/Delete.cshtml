@model CoverType
@{
    ViewData["Title"] = "Delete Cover Type";
}

<form method="post" asp-action="Delete">
	<input asp-for="Id" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Delete Cover Type</h2>
			<hr />
		</div>
