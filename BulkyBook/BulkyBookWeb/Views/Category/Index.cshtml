@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";    
}

<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Category List</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Category" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle me-3"></i>Create New Cateogry</a>
		</div>
	</div>
</div>
<br />
<table class="table table-bordered table-striped" style="width: 100%">
	<thead>
		<tr>
			<th>Category Name</th>
			<th>Display Order</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var cateogry in Model)
		{
			<tr>
				<td style="width: 50%">@cateogry.Name</td>
				<td style="width: 30%">@cateogry.DisplayOrder</td>
				<td style="width: 20%">
					<div class="w-100 btn-group" role="group">
						<a asp-controller="Category" asp-action="Edit" asp-route-id="@cateogry.Id" class="btn btn-primary me-2 w-50">
							<i class="bi bi-pencil-square"></i>
							Edit
						</a>
						<a asp-controller="Category" asp-action="Delete" asp-route-id="@cateogry.Id" class="btn btn-danger w-50">
							<i class="bi bi-trash3-fill"></i>
							Delete
						</a>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>

